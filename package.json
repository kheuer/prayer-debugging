{
  "name": "prayer-debugging",
  "displayName": "Prayer Debugging",
  "description": "Helps you debug your code and grow in faith and dependence on God.",
  "version": "1.0.1",
  "publisher": "kheuer",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.96.0"
  },
  "license": "UNLICENSED",
  "categories": [
    "Debuggers",
    "Other"
  ],
  "keywords": [
    "pray",
    "christian",
    "debug"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/kheuer/prayer-debugging"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Prayer Debugging",
      "properties": {
        "prayer-debugging.language": {
          "type": "string",
          "default": "en",
          "enum": [
            "en",
            "es",
            "de"
          ],
          "description": "Select the language for the prayer: 'en' for english, 'es' para español, 'de' für deutsch."
        }
      }
    },
    "commands": [
      {
        "command": "prayer-debugging.offerPray",
        "title": "Pray"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.97.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "eslint": "^9.21.0",
    "esbuild": "^0.25.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}